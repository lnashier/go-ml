{
  "schema": {
    "target": "sales",
    "features": [
      "tv"
    ]
  },
  "ops": [
    {
      "type": "plot",
      "enabled": true,
      "args": {
        "input": {
          "data": "./linear/problem1/sale.csv",
          "charts": [
            "scatter",
            "histogram"
          ]
        },
        "output": {
          "plot": "./linear/problem1/scratch/plot"
        }
      }
    },
    {
      "type": "split",
      "enabled": true,
      "args": {
        "input": {
          "data": "./linear/problem1/sale.csv"
        },
        "output": {
          "training": "./linear/problem1/scratch/data/training.csv",
          "test": "./linear/problem1/scratch/data/test.csv"
        }
      }
    },
    {
      "type": "fit",
      "enabled": true,
      "args": {
        "input": {
          "data": "./linear/problem1/scratch/data/training.csv",
          "opts": {
            "loss": "mse",
            "epochs": 1000000,
            "batch": 0.01,
            "lr": 0.01
          }
        },
        "output": {
          "report": "./linear/problem1/scratch/report/train.json",
          "model": "./linear/problem1/scratch/model.json"
        }
      }
    },
    {
      "type": "test",
      "enabled": true,
      "args": {
        "input": {
          "data": "./linear/problem1/scratch/data/test.csv",
          "model": "./linear/problem1/scratch/model.json"
        },
        "output": {
          "report": "./linear/problem1/scratch/report/test.json"
        }
      }
    }
  ]
}